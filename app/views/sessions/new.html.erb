<h1>Sign in!</h1>

<div class="row">
			<div class="col-md-4"></div>
			<div class="col-md-4 border">

				<%= form_for :session, :url => sessions_path do |f| %>

					<h2>Email: <%= f.text_field :email, class: "form-control" %></h2>
					<h2>Password: <%= f.password_field :password, class: "form-control" %></h2>
					<%= f.submit "Sign in!", class: "btn btn-lg btn-primary" %>
				<% end %>
			<%= link_to "Take me to Sign up!", new_user_path, class: "btn btn-lg btn-warning" %>
			</div>
			<div class="col-md-4"></div>
</div>